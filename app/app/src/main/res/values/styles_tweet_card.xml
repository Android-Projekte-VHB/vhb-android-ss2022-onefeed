<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tweet_card_card_layout" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tweet_card_profile_picture">
        <item name="android:contentDescription">@string/content_description_tweet_profile_picture
        </item>
        <item name="android:layout_width">@dimen/tweet_card_profile_picture_dimensions</item>
        <item name="android:layout_height">@dimen/tweet_card_profile_picture_dimensions</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="tweet_card_content_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tweet_card_content" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/news_card_item_margin</item>
    </style>

    <style name="tweet_card_author_tag" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textFontWeight">@integer/material_motion_duration_long_1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tweet_card_author_name" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tweet_card_author_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/news_card_item_margin</item>
    </style>
</resources>