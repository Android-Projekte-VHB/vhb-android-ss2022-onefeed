<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addNewQuelle.ADDActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/quellenSocialMediaHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/headlineQuellenSocialMedia"
                style="@style/TextAppearance.Material3.ActionBar.Title"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.Material3.ActionBar.Title"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewQuellenSM"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/quellenNewsPagesHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/headlineQuellenNP"
                style="@style/TextAppearance.Material3.ActionBar.Title"
                android:textAppearance="@style/TextAppearance.Material3.ActionBar.Title"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewQuellenNP"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/quellenInterestsHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/headlineQuellenIn"
                android:textAppearance="@style/TextAppearance.Material3.ActionBar.Title"
                android:textColor="?attr/colorPrimary"
                style="@style/TextAppearance.Material3.ActionBar.Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewQuellenIn"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>