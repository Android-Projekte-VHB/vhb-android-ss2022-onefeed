<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragementsUI.SocialMediaFragement">

    <ImageButton
        android:id="@+id/imageTwitterButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="4dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ovalbutton"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_twitter_brands"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageRedditButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="180dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ovalbutton"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_reddit__1_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/socialMediaHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="@string/socialMediaHeadline"
        android:textColor="@color/primaryColor"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>