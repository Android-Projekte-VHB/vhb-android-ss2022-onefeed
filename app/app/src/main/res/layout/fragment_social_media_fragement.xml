<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.onboard.SocialMediaFragment">

    <com.example.myapplication.animation.onboard.SocialMediaAnimation
        android:id="@+id/imageTwitterButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="64dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custombutton"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/twitter_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/socialMediaConnectHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/TextAppearance.Material3.ActionBar.Title"
        android:layout_marginTop="40dp"
        android:text="@string/social_media_headline"
        android:textColor="?attr/colorPrimary"
        android:textSize="28sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>