<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="50dp"
    >

    <com.onefeed.app.animation.addSource.AnimateLinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/frameLayout_icons_source"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_layout_source_icons"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/shape_custom_button"
                android:orientation="vertical"
                tools:ignore="UselessParent,SpeakableTextPresentCheck">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="11dp" />

                <ImageView
                    android:id="@+id/source_image"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:contentDescription="@string/picture_of_button"
                    app:srcCompat="@drawable/icon_twitter" />

            </LinearLayout>

            <TextView
                android:id="@+id/source_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hello"
                android:textSize="18sp"
                style="@style/TextAppearance.Material3.ActionBar.Title"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/deleteLayout"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/shape_custom_button"
            android:backgroundTint="?attr/colorError"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_close"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </com.onefeed.app.animation.addSource.AnimateLinearLayout>

</FrameLayout>