<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.example.myapplication.addNewQuelle.AnimateLinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/frameLayout_icons_Quellen"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayoutQuellenIcons"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custombutton"
                android:orientation="vertical"
                tools:ignore="UselessParent,SpeakableTextPresentCheck">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="11dp" />

                <ImageView
                    android:id="@+id/quellenImage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:contentDescription="@string/pictureofbutton"
                    app:srcCompat="@drawable/twitter_icon" />

            </LinearLayout>

            <TextView
                android:id="@+id/quelleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hallo"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/deleteLayout"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/custombutton"
            android:backgroundTint="?attr/colorError"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/close" />
        </LinearLayout>
    </com.example.myapplication.addNewQuelle.AnimateLinearLayout>

</FrameLayout>