<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.onboard.InterestsFragment">


    <com.example.myapplication.animation.onboard.InterestsAnimation
        android:id="@+id/buttonKategoriePolitik"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/custombutton"
        android:text="@string/category_politic"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@+id/buttonKategorieWirtschaft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="?attr/shapeAppearanceSmallComponent"
        app:strokeColor="?attr/colorOnSurface"
        app:strokeWidth="1dp" />

    <com.example.myapplication.animation.onboard.InterestsAnimation
        android:id="@+id/buttonKategorieWirtschaft"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="256dp"
        style="@style/Widget.Material3.Button.TonalButton"
        android:background="@drawable/custombutton"
        android:text="@string/category_economy"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonKategoriePolitik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.example.myapplication.animation.onboard.InterestsAnimation
        android:id="@+id/buttonKategorieCorona"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="328dp"
        android:background="@drawable/custombutton"
        android:text="@string/category_corona"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.example.myapplication.animation.onboard.InterestsAnimation
        android:id="@+id/buttonKategorieGaming"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="348dp"
        android:background="@drawable/custombutton"
        android:text="@string/category_gaming"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.example.myapplication.animation.onboard.InterestsAnimation
        android:id="@+id/buttonKategorieTechnik"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="444dp"
        android:background="@drawable/custombutton"
        android:text="@string/category_technology"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.example.myapplication.animation.onboard.InterestsAnimation
        android:id="@+id/buttonKategorieSport"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/custombutton"
        android:text="@string/category_sport"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/socialMediaHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="40sp"
        android:text="@string/interests_headline"
        android:textColor="?attr/colorPrimary"
        android:textSize="28sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>